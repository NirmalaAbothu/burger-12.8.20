<div class="container">
  <img
    src="https://images.vexels.com/media/users/3/152411/isolated/preview/4a22d435331dde73ae0f1cebbdbaacff-double-burger-icon-by-vexels.png"
    alt="Burger" id="burgerIcon">
  <h1>
    Eat-Da-Burger
  </h1>

  <div class="row">

    <div class="col-md-2 col-sm-2 col-xs-12">

    </div>
    <div class="col-md-4 col-sm-4">
      <ol>

        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoure=true}}
          {{/unless}}
        {{/each}}
      </ol>


    </div>
    <div class="col-md-4 col-sm-4">
      <ol>
        {{#each burgers}}
          {{#if devoured}}
            <li>{{burger_name}}</li>


          {{/if}}
        {{/each}}
      </ol>

    </div>
    <div class="col-md-2 col-sm-2">

    </div>


  </div>

  <div class="row">
    <div class="col-md-2 col-sm-2 col-xs-12">

    </div>
    <div class="col-md-8 col-sm-8">
      <form class="create-form">

        <div class="form-group">
          <label for="ca"></label>
          <textarea rows="2" cols="20" id="ca" name="name"></textarea>
        </div>
        <button type="submit" id="submit">submit</button>
        <div>Enter a burger you want to eat and click submit button</div>
      </form>
    </div>
    <div class="col-md-2 col-sm-4">
    </div>
    <form class="create-form">
  </div>
</div>